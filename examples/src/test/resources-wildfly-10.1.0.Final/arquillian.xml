<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian
http://jboss.org/schema/arquillian/arquillian_1_0.xsd">


    <!-- Servlet protocol is currently required. -->
    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <property name="deploymentExportPath">target/deployment</property>
    </engine>
    
    <container qualifier="wildfly-10" default="true">
        <configuration>
            <property name="jbossHome">target/wildfly-10.1.0.Final</property>
            <property name="javaVmArguments">-Djboss.socket.binding.port-offset=10000</property>
            <property name="managementPort">19990</property>
            <!-- <property name="javaVmArguments">-Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y</property> -->
        </configuration>
    </container>

</arquillian>